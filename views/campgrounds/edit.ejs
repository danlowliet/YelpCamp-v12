<%- include("../partials/header") %>

<div class="container">
    <h1 class="text-center mb-4">Edit <%= campground.name %> </h1>
    <form action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST">
        <div style="width: 30%; margin: 0 auto;">
            <div class="form-group">
                <input type="text" name="campground[name]" value="<%= campground.name %>" class="form-control" id="inputName">
              </div>
              <div class="form-group">
                <input type="text" name="campground[image]" value="<%= campground.image %>" class="form-control" id="inputImage">
              </div>
              <div class="form-group">
                <input type="text" name="campground[description]" value="<%= campground.description %>" class="form-control" id="inputDescription">
              </div>
              <button type="submit" class="btn btn-primary btn-block">Submit</button>
              <a href="/campgrounds">Go Back</a>
        </div>
    </form>
</div>




<%- include("../partials/footer") %>