<%- include("../partials/header") %>

<div class="container">
    <h1 class="text-center mb-4">Edit Comment</h1>
    <div style="width: 30%; margin: 0 auto;">
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input type="text" name="comment[text]" value="<%= comment.text %>" class="form-control" id="inputName">
            </div>

              <button type="submit" class="btn btn-primary btn-block">Submit</button>
              <a href="/campgrounds">Go Back</a>
        </form>
    </div>
</div>


